{
  "name": "@es-exec/esbuild-plugin-eslint",
  "version": "0.0.4",
  "description": "An esbuild plugin to run a script after building a package.",
  "author": "tim",
  "license": "MIT",
  "keywords": [
    "esbuild",
    "eslint",
    "es-start",
    "es-serve",
    "es-exec",
    "es-run",
    "nodemon",
    "typescript"
  ],
  "repository": "tim117/es-exec",
  "homepage": "https://github.com/tim117/es-exec/tree/main/plugins/eslint",
  "module": "dist/index.mjs",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint --ext .ts,.tsx ./src"
  },
  "dependencies": {
    "@es-exec/utils": "workspace:workspace.*",
    "chalk": "4.1.2",
    "eslint": "^8.36.0"
  },
  "devDependencies": {
    "@types/node": "^18.15.5",
    "esbuild": "^0.15.18",
    "typescript": "^4.9.5"
  }
}
