{
  "name": "@es-exec/cli",
  "version": "0.0.4",
  "description": "An esbuild plugin to run a script after building a package.",
  "author": "tim117",
  "license": "MIT",
  "keywords": [
    "esbuild",
    "eslint",
    "es-start",
    "es-serve",
    "es-exec",
    "es-run",
    "nodemon",
    "typescript"
  ],
  "repository": "tim117/es-exec",
  "homepage": "https://github.com/tim117/es-exec/tree/main/packages/es-cli",
  "module": "dist/main.mjs",
  "main": "dist/main.cjs",
  "exports": {
    ".": {
      "import": "./dist/main.mjs",
      "require": "./dist/main.cjs"
    }
  },
  "bin": {
    "es-exec": "dist/main.mjs"
  },
  "scripts": {
    "start": "node dist/main.mjs src/main.ts -m test.js --esbuild-config esbuild.config.js --verbose",
    "lint": "eslint --ext .ts,.tsx ./src"
  },
  "dependencies": {
    "@es-exec/api": "workspace.*",
    "@es-exec/utils": "workspace.*",
    "commander": "^9.4.0"
  },
  "devDependencies": {
    "@types/node": "^18.7.13",
    "eslint": "^8.22.0",
    "typescript": "^4.8.2"
  },
  "type": "module"
}
