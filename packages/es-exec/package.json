{
  "name": "@es-exec/api",
  "version": "0.0.4",
  "description": "An esbuild plugin to run a script after building a package.",
  "author": "tim117",
  "license": "MIT",
  "keywords": [
    "esbuild",
    "eslint",
    "es-start",
    "es-serve",
    "es-exec",
    "es-run",
    "nodemon",
    "typescript"
  ],
  "repository": "tim117/es-exec",
  "homepage": "https://github.com/tim117/es-exec/tree/main/packages/es-exec",
  "module": "dist/index.mjs",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint --ext .ts,.tsx ./src"
  },
  "dependencies": {
    "@es-exec/esbuild-plugin-eslint": "workspace.*",
    "@es-exec/esbuild-plugin-serve": "workspace.*",
    "@es-exec/esbuild-plugin-start": "workspace.*",
    "@es-exec/utils": "workspace.*",
    "esbuild": "^0.15.2"
  },
  "devDependencies": {
    "@types/node": "^18.7.13",
    "eslint": "^8.22.0",
    "typescript": "^4.8.2"
  }
}
